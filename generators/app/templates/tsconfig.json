{
  "compilerOptions": {
    "lib": [
      "es7",
      "ESNext.AsyncIterable"
    ],
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}